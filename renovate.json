{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboard": true,
  "labels": [
    "dependencies"
  ],
  "helm-values": {
    "managerFilePatterns": [
      "**/values.yaml"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile",
        "custom.regex"
      ],
      "groupName": "chore(deps): update stable-diffusion artefacts"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "submodules.json"
      ],
      "matchStrings": [
        "\"comfyui\"\\s*:\\s*\\{[^}]*?\"tag\"\\s*:\\s*\"(?<currentValue>v[0-9]+\\.[0-9]+\\.[0-9]+)\""
      ],
      "depNameTemplate": "comfyanonymous/ComfyUI",
      "datasourceTemplate": "github-tags"
    }
  ]
}
